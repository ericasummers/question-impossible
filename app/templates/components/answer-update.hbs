{{#if updateAnswerShowing}}
<h4>Edit Answer:</h4>
  <form>
    <div class="form-group">
      <label for="body">Answer:</label>
      {{input value=body id="body" placeholder=answer.body}}
    </div>
    <div class="form-group">
      <label for="author">Username:</label>
      {{input value=author id="author" placeholder=answer.author}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date" type="date" placeholder=answer.date}}
    </div>

    <button class="btn btn-info" {{action 'update' answer}}>Edit</button>&nbsp;&nbsp;<button class="btn btn-danger" {{action 'cancelUpdate'}}>Cancel</button>
  </form>
{{else}}
  <h5 {{action 'showUpdateForm'}} id="edit-answer">Edit this answer</h5>
{{/if}}
