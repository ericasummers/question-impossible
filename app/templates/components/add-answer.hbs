{{#if addAnswerShowing}}
  <h4>Do your worst!</h4>
  <form>
    <div class="form-group">
      <label for="body">Your Answer:</label>
      {{input value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="author">Username:</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date" type="date"}}
    </div>

    <button class="btn btn-success" {{action 'saveAnswer'}}>Submit!</button>&nbsp;&nbsp;<button class="btn btn-danger" {{action 'cancelAnswer'}}>Cancel</button>
  </form>
{{else}}
  <button {{action 'showAnswerForm'}} class="btn btn-info">I have the answer</button>
{{/if}}
