{{#if updateQuestionShowing}}
<h4>Update Question:</h4>
  <form>
    <div class="form-group">
      <label for="body">Question:</label>
      {{input value=body id="body" placeholder=question.body}}
    </div>
    <div class="form-group">
      <label for="details">Details:</label>
      {{input value=details id="details" placeholder=question.details}}
    </div>
    <div class="form-group">
      <label for="author">Username:</label>
      {{input value=author id="author" placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date" type="date" placeholder=question.date}}
    </div>

    <button class="btn btn-info" {{action 'update' question}}>Update</button>&nbsp;&nbsp;<button class="btn btn-danger" {{action 'cancelUpdate'}}>Cancel</button>
  </form>
{{else}}
  <h5 {{action 'showUpdateForm'}} id="edit-question">Update Question</h5>
{{/if}}
